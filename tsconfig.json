{
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "noEmit": true,
        "module": "esnext",
        "target": "esnext",

        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "skipLibCheck": true,

        "jsx": "react-jsx",
        "types": ["vite/client"],

        "paths": {
            "@engine": [ "src/game/engine" ],
        }

    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
